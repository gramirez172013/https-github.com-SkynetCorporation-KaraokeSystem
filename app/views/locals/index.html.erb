<p id="notice"><%= notice %></p>

<h1>Listing Locals</h1>

<table>
  <thead>
    <tr>
      <th>Nombre local</th>
      <th>Direccion</th>
      <th>Telf reservas</th>
      <th>Email</th>
      <th>Descripcion</th>
      <th>Administrador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.nombre_Local %></td>
        <td><%= local.direccion %></td>
        <td><%= local.telf_Reservas %></td>
        <td><%= local.email %></td>
        <td><%= local.descripcion %></td>
        <td><%= local.administrador %></td>
        <td><%= link_to 'Show', local %></td>
        <td><%= link_to 'Edit', edit_local_path(local) %></td>
        <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

