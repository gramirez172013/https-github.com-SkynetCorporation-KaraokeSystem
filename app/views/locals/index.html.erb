<p id="notice"><%= notice %></p>

<h1>Listado de Locales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre local</th>
      <th>Dirección</th>
      <th>Telefono de reservas</th>
      <th>Email</th>
      <th>Descripción</th>
      <th>Administrador de local</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.nombre_Local %></td>
        <td><%= local.direccion %></td>
        <td><%= local.telf_Reservas %></td>
        <td><%= local.email %></td>
        <td><%= local.descripcion %></td>
        <td><%= local.administrador %></td>
        <td><%= link_to 'Mostrar', local %></td>
        <td><%= link_to 'Editar', edit_local_path(local) %></td>
        <td><%= link_to 'Eliminar', local, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo local', new_local_path %>
